<% content_for :body_class, "users-background" %>

<% if notice %>
<div class="z-depth-1 card green lighten-5">
  <div class="card-content green-text left-align" style="border:1px solid green;">
    <p id="notice"><%= notice %></p>
  </div>
</div>
<% end %>

<div class="grid">


  <i class="large material-icons default-avatar business-center white-text" alt="business_center">business_center</i>
  <div class="profile-content white bottom-attached">

    <div class="top section">
      <h4><b><%= @post.title.capitalize %></b></h4>
      <p class="grey-text"><b><%= @post.job_type %></b></p>
      <p class="grey-text"><i>Publicado por: <b><%= link_to @post.company.name.capitalize, company_path(@post.company) %></b></i></p>
    </div>

    <div class="divider"></div>
    <div class="section left-align white black-text light-padding">
      <div>
        <label>Un poco sobre la posición:</label>
        <p>
          <%= @post.description %>
        </p>
      </div>
    </div>

    <div class="divider"></div>
    <div class="section left-align light-padding">
      <label>Categorías:</label>
      <div class="chips-container">
        <% @post.tags.each do |tag| %>
          <div class="chip blue lighten-1 white-text">
            <%= tag.name %>
          </div>
        <% end %>
      </div>
    </div>

    <% if logged_in_as_user? %>
      <div class="divider"></div>
      <div class="section left-align light-padding">
        <label>Si te interesa la posición, puedes contactar la compañía:</label>
        <p class="center-align">
          <%= link_to 'Me Interesa!', company_post_new_email_path(@post.company, @post), class: "btn green waves-effect waves-light" %>
        </p>
      </div>
    <% end %>

    <% if current_user == @post.company %>
      <div class="divider"></div>
      <div>
        <p><%= link_to 'Editar Posición', edit_company_post_path(@post.company, @post), class: "btn-flat orange lighten-1 white-text" %></p>
      </div>
    <% end %>

    <%= link_to 'Atrás', :back, class: "btn-flat lighten-1 grey white-text" %>

  </div>


</div>


