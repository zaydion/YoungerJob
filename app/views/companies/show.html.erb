<% content_for :body_class, "companies-background" %>

<% if notice %>
<div class="z-depth-1 card green lighten-5">
  <div class="card-content green-text left-align" style="border:1px solid green;">
    <p id="notice"><%= notice %></p>
  </div>
</div>
<% end %>

<div class="grid">
  <% if @company.avatar.attached? %>
    <%= image_tag @company.avatar.variant(resize: '200x200'), size: "200x200", class: "circle company-avatar" %>
  <% else %>
    <i class="large material-icons default-avatar white-text">business</i>
  <% end %>

  <div class="profile-content white <%= !@company.avatar.attached? && 'bottom-attached' %>">
    <div class="top section">
      <h4><b><%= @company.name.capitalize %></b></h4>
      <p class="grey-text"><b><%= @company.address %></b></p>
      <p class="grey-text"><b><%= @company.email %></b></p>
      <p class="grey-text"><b><i><%= @company.phone_number %></i></b></p>
      <div class="center-align">
        <%= link_to "Posiciónes disponibles", company_posts_path(@company), class: "btn-flat blue lighten-1 white-text" %>
      </div>
    </div>

    <div class="divider"></div>
    <div class="section left-align white black-text light-padding">
      <div>
        <label>Un poco sobre la compañía:</label>
        <p><%= @company.description %></p>
      </div>
    </div>
    <% if current_user == @company %>
    <div class="divider"></div>
    <div>
      <p><%= link_to 'Crear nueva posición', new_company_post_path(@company), class: "btn-flat green white-text" %></p>
      <p><%= link_to 'Editar compañía', edit_company_path(@company), class: "btn-flat orange lighten-3 white-text" %></p>
    </div>
    <% end %>
  </div>
</div>


