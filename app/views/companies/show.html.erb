<% content_for :body_class, "companies-background" %>
<p id="notice"><%= notice %></p>

<div class="grid">
  <i class="large material-icons default-avatar">business</i>
  <div class="profile-content white bottom-attached">

    <div class="top section">
      <h4><b><%= @company.name.capitalize %></b></h4>
      <p class="grey-text"><b><%= @company.address %></b></p>
      <p class="grey-text"><b><%= @company.email %></b></p>
      <p class="grey-text"><b><i><%= @company.phone_number %></i></b></p>
      <div class="center-align">
        <%= link_to "Posiciones disponibles", company_posts_path(@company), class: "btn-flat blue lighten-1 white-text" %>
      </div>
    </div>

    <div class="divider"></div>
    <div class="section left-align white black-text light-padding">
      <div>
        <label>Un poco sobre la compañia:</label>
        <p><%= @company.description %></p>
      </div>
    </div>
    <% if current_user == @company %>
    <div class="divider"></div>
    <div>
      <p><%= link_to 'Crear nueva posicion', new_company_post_path(@company), class: "btn-flat green white-text" %></p>
      <p><%= link_to 'Editar compañia', edit_company_path(@company), class: "btn-flat orange lighten-3 white-text" %></p>
    </div>
    <% end %>
  </div>
</div>


