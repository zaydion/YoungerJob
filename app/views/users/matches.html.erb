<h5>Matches:</h5>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Company</th>
      <th>Job Type</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, company_post_path(post.company, post) %></td>
        <td><%= post.description %></td>
        <td><%= link_to post.company.name, post.company %></td>
        <td><%= post.job_type %></td>
        <% post.tags.each do |tag| %>
          <td><%= tag.name %></td>
        <% end %>
        <td><%= link_to 'Show', [post.company, post] %></td>
        <td><%= link_to 'Edit', edit_company_post_path(post.company, post) %></td>
        <td><%= link_to 'Destroy', [post.company, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
