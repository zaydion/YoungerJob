<!DOCTYPE html>
<html>
  <head>
    <title>YoungerJob</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0">
    <!-- Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- MaterializeCSS Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" type="text/javascript"></script>
    <!-- MaterializeCSS Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper white">
        <ul class="nav-items">
          <li>
            <%= link_to(root_path) do %>
              <i class="material-icons orange-text">home</i>
            <% end %>
          </li>
          <% if logged_in_as_user? %>
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="material-icons green-text darken-4" alt="person">person</i>
              <% end %>
            </li>
            <li>
              <%= link_to user_matches_path(current_user) do %>
                <i class="material-icons yellow-text" alt="person">star</i>
              <% end %>
            </li>
            <% elsif logged_in_as_company? %>
            <li>
              <%= link_to company_path(current_user) do %>
                <i class="material-icons orange-text" alt="person">person</i>
              <% end %>
            </li>
          <% end%>
          <% if logged_in? %>
            <li>
              <%= link_to logout_path, class: "black-text align-icon-with-text" do %>
                Salir <i class="material-icons" alt="exit">exit_to_app</i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container <%= yield (:body_class) %>">
      <div class="row center-align">
        <div class="col s12 m10 offset-m1 l8 offset-l2">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
